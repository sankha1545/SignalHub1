generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/** ----------------------------- Enums ----------------------------- */

enum Role {
  VIEWER
  EDITOR
  ADMIN
}

enum Channel {
  SMS
  WHATSAPP
  EMAIL
  TWITTER
  MESSENGER
}

enum ActivityType {
  LOGIN
  PROFILE_CHANGE
  OTHER
}

/** Constrain message direction to avoid freeform values */
enum Direction {
  INBOUND
  OUTBOUND
}

/** ----------------------------- Models ----------------------------- */

/**
 * Activity logs for auditing user actions
 */
model ActivityLog {
  id        String       @id @default(cuid())
  userId    String
  type      ActivityType
  meta      Json? // optional metadata (e.g., IP, provider, diff)
  createdAt DateTime     @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

/**
 * Temporary phone OTPs
 */
model PhoneOtp {
  id        String   @id @default(cuid())
  phone     String   // E.164 phone e.g. +918597786209
  otp       String
  used      Boolean  @default(false)
  attempts  Int      @default(0)
  createdAt DateTime @default(now())

  @@index([phone])
}

/**
 * Core user/auth models
 *
 * - email: unique at DB level
 * - role: default VIEWER
 * - profile: 1:1 relation via Profile.userId (Profile is owning side)
 */
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  passwordHash  String?
  provider    String   @default("email") // "email" | "google" | "github" | ...
  providerId  String?  @unique
  googleSub     String?   // Google's subject id (sub) if available
  emailVerified Boolean   @default(false)
  role          Role      @default(VIEWER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt

  // relation (Profile is the owner via Profile.userId)
  profile       Profile?

  accounts Account[]
  sessions Session[]

  // App relationships
  threads          Thread[]           @relation("UserThreads")    // User → Thread (creator)
  messages         Message[]          @relation("UserMessages")   // User → Message (sender)
  teamMember       TeamMember[]
  scheduledMessage ScheduledMessage[]  // NOTE: singular/plural naming kept for clarity
  activityLog      ActivityLog[]

  /// Ensure a googleSub (when present) is unique across users to avoid multiple users sharing the same Google account.
  @@unique([googleSub])
}

/**
 * Separate Profile model — Profile is the owning side (has userId FK)
 * userId is unique so a profile cannot be shared across users.
 */
model Profile {
  id                 String   @id @default(cuid())
  userId             String   @unique
  displayName        String?
  avatarUrl          String?
  bio                String?
  metadata           Json?
  phoneNumber   String?   // <-- add this
  phoneVerified Boolean?  @default(false)
  phoneVerifiedAt DateTime?
  // Optional geo / locale fields (nullable so existing rows are compatible)
  gender             String?      // e.g. "male" | "female" | "other"
  countryGeonameId   Int?         // GeoNames numeric id (nullable)
  countryCode        String?      // ISO country code, e.g. "US", "IN"
  countryName        String?      // readable country name
  stateGeonameId     Int?         // optional state/province GeoNames id
  stateName          String?      // readable state/province name
  timezone           String?      // timezone string shown to user, e.g. "Australia/Brisbane"

  createdAt          DateTime @default(now())
  updatedAt          DateTime @default(now()) @updatedAt

  // Relation to User (same as before)
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/**
 * NextAuth-compatible models (Account, Session, VerificationToken)
 * - Account has a unique composite (provider, providerAccountId) to prevent dupes.
 */
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/**
 * Email OTP table (for email-based OTP flows)
 */
model EmailOtp {
  id        String   @id @default(cuid())
  email     String
  otp       String
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
}

/**
 * Messaging models
 */
model Contact {
  id        String   @id @default(cuid())
  name      String?
  phone     String?  @unique
  email     String?  @unique
  metadata  Json?
  threads   Thread[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Thread {
  id        String  @id @default(cuid())
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId String

  // opposite field for UserThreads (creator)
  creator   User?   @relation("UserThreads", fields: [creatorId], references: [id], onDelete: SetNull)
  creatorId String?

  messages  Message[]
  scheduled ScheduledMessage[]
  status    String   @default("open")
  lastAt    DateTime @updatedAt
  createdAt DateTime @default(now())

  @@index([contactId])
}

model Message {
  id         String   @id @default(cuid())
  thread     Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
  threadId   String
  sender     User?    @relation("UserMessages", fields: [senderId], references: [id], onDelete: SetNull)
  senderId   String?
  body       String
  channel    Channel
  externalId String? // provider message id
  direction  Direction
  metadata   Json?
  createdAt  DateTime @default(now())

  @@index([threadId])
  @@index([externalId])
}

/**
 * Teams & team roles
 */
model Team {
  id        String       @id @default(cuid())
  name      String
  members   TeamMember[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now()) @updatedAt
}

model TeamMember {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  role      Role     @default(VIEWER)
  createdAt DateTime @default(now())

  @@unique([teamId, userId])
}

/**
 * Scheduled messages (for future sends)
 */
model ScheduledMessage {
  id       String @id @default(cuid())
  thread   Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  threadId String

  sender    User?    @relation(fields: [senderId], references: [id], onDelete: SetNull)
  senderId  String?
  body      String
  channel   Channel
  sendAt    DateTime
  status    String   @default("scheduled") // scheduled | sent | failed | cancelled
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([sendAt])
}
